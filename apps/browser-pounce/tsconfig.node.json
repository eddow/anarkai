{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "./src/lib/*"
      ],
      "$assets/*": [
        "./assets/*"
      ],
      "$components/*": [
        "./src/components/*"
      ],
      "@app/*": [
        "./src/*"
      ],
      "@pounce/*": [
        "node_modules/pounce-ts/src/*"
      ],
      "@pounce/runtime": [
        "node_modules/pounce-ts/src/lib/index.ts"
      ],
      "@pounce/runtime/jsx-runtime": [
        "node_modules/pounce-ts/src/runtime/jsx-runtime.ts"
      ],
      "@pounce/runtime/jsx-dev-runtime": [
        "node_modules/pounce-ts/src/runtime/jsx-dev-runtime.ts"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "../../engines/pixi/vite-plugins.ts",
    "../../engines/pixi/vite-config.ts",
    "../../engines/ssh/vite-plugin-css-tag.ts"
  ]
}