{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@ssh/*": [
				"./node_modules/ssh/src/*"
			],
			"$lib/*": [
				"./node_modules/ssh/src/lib/*"
			],
			"$assets/*": [
				"./node_modules/ssh/assets/*"
			],
			"@app/*": [
				"./node_modules/ssh/src/*"
			],
			"@pounce/*": [
				"./node_modules/pounce-ts/src/*"
			],
			"engine-pixi/*": [
				"../../engines/pixi/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"../ssh/src/**/*.ts",
		"../ssh/src/**/*.tsx",
		"../ssh/assets/**/*.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}