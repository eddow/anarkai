{
	"compilerOptions": {
		"composite": true,
		"target": "ES2022",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true,
		"useDefineForClassFields": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"types": [
			"vite/client"
		],
		"baseUrl": ".",
		"paths": {
			"$lib/*": [
				"./src/lib/*"
			],
			"$components/*": [
				"./src/components/*"
			],
			"$assets/*": [
				"./assets/*"
			],
			"@app/*": [
				"./src/*"
			],
			"@pounce/*": [
				"node_modules/pounce-ts/src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"sandbox/**/*.ts",
		"sandbox/**/*.tsx",
		"assets/**/*.ts",
		"assets/**/*.tsx",
		"../pixi/assets/resources.ts",
	]
}